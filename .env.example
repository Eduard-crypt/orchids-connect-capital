LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# ============================================
# STRIPE PAYMENTS - Environment-Aware Configuration
# ============================================
# Switch between test and live mode by changing STRIPE_MODE
# Set to "test" for development, "live" for production
# No code changes needed - just restart the server!

STRIPE_MODE=test

# Test Mode Keys (for development/testing)
STRIPE_TEST_SECRET_KEY=sk_test_...
NEXT_PUBLIC_STRIPE_TEST_PUBLISHABLE_KEY=pk_test_...
STRIPE_TEST_WEBHOOK_SECRET=whsec_test_...

# Live Mode Keys (for production - keep these secure!)
STRIPE_LIVE_SECRET_KEY=sk_live_...
NEXT_PUBLIC_STRIPE_LIVE_PUBLISHABLE_KEY=pk_live_...
STRIPE_LIVE_WEBHOOK_SECRET=whsec_live_...

